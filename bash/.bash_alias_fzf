# fd - cd to selected directory
fd() {
  local dir
  dir=$(find ${1:-.} -type d -maxdepth 5 -print 2> /dev/null | fzf +m) &&
  cd "$dir"
}

# fkill - kill process
fkill() {
  pid=$(ps -ef | sed 1d | fzf -m | awk '{print $2}')

  if [ "x$pid" != "x" ]
  then
    kill -${1:-9} $pid
  fi
}

fvim() {
  vim "$(fzf +m)"
}
