if filereadable(expand("~/.vimrc.minimal"))
        source ~/.vimrc.minimal
endif

call plug#begin('~/.vim/plugged')

Plug 'Donearm/Ubaryd'

Plug 'tpope/vim-surround'
Plug 'tpope/vim-commentary'
Plug 'junegunn/fzf.vim'

call plug#end()

set background=dark
colorscheme ubaryd

if filereadable(expand("~/.vimrc.local"))
        source ~/.vimrc.local
endif
